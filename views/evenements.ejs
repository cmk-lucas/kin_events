<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catalogue d'√âv√©nements</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">

  <!-- En-t√™te -->
  <header class="bg-gradient-to-r from-blue-600 via-indigo-600 to-blue-800 text-white py-12">
    <div class="max-w-7xl mx-auto text-center px-4">
      <h1 class="text-4xl font-extrabold tracking-tight leading-tight text-white mb-4 transform transition-transform duration-300 hover:scale-105">
        Catalogue d'√âv√©nements</h1>
      <p class="text-lg md:text-xl mb-6 max-w-2xl mx-auto text-gray-200">
        D√©couvrez des √©v√©nements passionnants √† venir et r√©servez votre place d√®s maintenant pour ne rien manquer !
      </p>
      <a href="#events"
        class="bg-yellow-500 text-blue-900 font-semibold py-3 px-8 rounded-full shadow-md transition-all duration-300 hover:bg-yellow-400 hover:shadow-xl transform hover:scale-105">
        Explorer les √âv√©nements
      </a>
    </div>
  </header>

  <!-- Filtres de recherche -->
  <section class="bg-gray-100 py-10">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Filtrer les √âv√©nements</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <select id="filterCategory" class="p-3 rounded-lg border border-gray-300">
          <option value="">Toutes les cat√©gories</option>
          <option value="Hip-Hop">Hip-Hop</option>
          <option value="Rock">Rock</option>
          <option value="Jazz">Jazz</option>
          <option value="Gala">Gala</option>
        </select>
        <select id="filterPrice" class="p-3 rounded-lg border border-gray-300">
          <option value="">Tous les prix</option>
          <option value="lt5000">Moins de 5000 CDF</option>
          <option value="5000-8000">5000 - 8000 CDF</option>
          <option value="gt8000">Plus de 8000 CDF</option>
        </select>
        <input type="date" id="filterDate" class="p-3 rounded-lg border border-gray-300" />
        <input type="text" id="filterLieu" placeholder="Lieu (ex: Kinshasa)" class="p-3 rounded-lg border border-gray-300" />
      </div>
    </div>
  </section>

  <!-- Catalogue des √©v√©nements -->
  <section id="events" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-4xl font-extrabold text-center text-blue-700 mb-14">Nos √âv√©nements</h2>

      <% if (events && events.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
          <% events.forEach(event => { %>
            <article class="group relative bg-white rounded-3xl shadow-md hover:shadow-2xl overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:scale-[1.02]"
              data-category="<%= event && event.category ? event.category : 'Inconnu' %>"
              data-price="<%= event && event.price ? event.price : 'Non sp√©cifi√©' %>"
              data-date="<%= event && event.date ? event.date : 'Non sp√©cifi√©' %>"
              data-lieu="<%= event && event.lieu ? event.lieu : 'Lieu non sp√©cifi√©' %>">
              <span class="absolute top-4 left-4 bg-red-100 text-red-600 text-xs font-bold px-3 py-1 rounded-full shadow-sm z-10">üî• Nouveau</span>
              <img src="<%= event && event.image ? event.image : 'default-image.jpg' %>" alt="<%= event && event.title ? event.title : '√âv√©nement sans titre' %>" class="w-full h-52 object-cover group-hover:scale-110 group-hover:opacity-90 transition-transform duration-300">
              <div class="p-6">
                <h3 class="text-2xl font-bold text-blue-600 mb-2">üé§ <%= event && event.title ? event.title : 'Titre manquant' %></h3>
                <p class="text-gray-600 text-base mb-4"><%= event && event.description ? event.description : 'Aucune description disponible' %></p>
                <div class="flex items-center justify-between mt-6">
                  <span class="text-lg font-bold text-yellow-500"><%= event && event.price ? event.price : 'Non sp√©cifi√©' %> CDF</span>
                  <div class="flex space-x-2">
                    <a href="detail/<%= event && event.id ? event.id : '#' %>" class="bg-blue-600 text-white py-2 px-4 rounded-xl hover:bg-blue-700 transition transform hover:scale-105">D√©tails</a>
                    <button class="reserve-btn bg-yellow-500 text-blue-900 font-semibold py-2 px-4 rounded-xl hover:bg-yellow-400 transition transform hover:scale-105">R√©server</button>
                  </div>
                </div>
              </div>
            </article>
          <% }) %>
        </div>
      <% } else { %>
        <p>Aucun √©v√©nement disponible</p>
      <% } %>
    </div>
  </section>

  <!-- Modale de confirmation -->
  <div id="confirmationModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white p-8 rounded-2xl shadow-lg max-w-sm w-full text-center">
      <h3 class="text-xl font-bold text-blue-700 mb-4">R√©servation Confirm√©e üéâ</h3>
      <p class="text-gray-600 mb-6">Merci d'avoir r√©serv√©. Nous vous attendons avec impatience !</p>
      <button onclick="closeModal()" class="bg-blue-600 text-white px-5 py-2 rounded-xl hover:bg-blue-700 transition">Fermer</button>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    function openModal() {
      document.getElementById("confirmationModal").classList.remove("hidden");
    }

    function closeModal() {
      document.getElementById("confirmationModal").classList.add("hidden");
    }

    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll(".reserve-btn").forEach(button => {
        button.addEventListener("click", () => {
          openModal();
        });
      });

      // Filtres
      const filters = {
        category: '',
        price: '',
        date: '',
        lieu: ''
      };

      const eventCards = document.querySelectorAll('[data-category]');

      function applyFilters() {
        eventCards.forEach(card => {
          const cat = card.dataset.category.toLowerCase();
          const price = parseInt(card.dataset.price);
          const date = card.dataset.date;
          const lieu = card.dataset.lieu.toLowerCase();

          const matchCategory = !filters.category || cat === filters.category.toLowerCase();
          const matchPrice = !filters.price || (
            (filters.price === "lt5000" && price < 5000) ||
            (filters.price === "5000-8000" && price >= 5000 && price <= 8000) ||
            (filters.price === "gt8000" && price > 8000)
          );
          const matchDate = !filters.date || date === filters.date;
          const matchLieu = !filters.lieu || lieu.includes(filters.lieu.toLowerCase());

          card.style.display = (matchCategory && matchPrice && matchDate && matchLieu) ? "block" : "none";
        });
      }

      document.getElementById("filterCategory").addEventListener("change", e => {
        filters.category = e.target.value;
        applyFilters();
      });

      document.getElementById("filterPrice").addEventListener("change", e => {
        filters.price = e.target.value;
        applyFilters();
      });

      document.getElementById("filterDate").addEventListener("change", e => {
        filters.date = e.target.value;
        applyFilters();
      });

      document.getElementById("filterLieu").addEventListener("input", e => {
        filters.lieu = e.target.value;
        applyFilters();
      });
    });
  </script>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6">
    <div class="max-w-7xl mx-auto text-center">
      <p>&copy; 2025 Tous droits r√©serv√©s</p>
    </div>
  </footer>

</body>

</html>
